<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <title>STR DPS Info</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        font-family: sans-serif;
        padding: 10px;
        color: white;
        background-color: rgb(44,44,46);
      }

      .post {
        margin-bottom: 15px;
        padding: 10px 15px;
        box-shadow: 1px 2px 6px 3px rgba(255, 255,255, 0.1);
        border-radius: 20px;
      }

      .reply-post {
        margin-top: 10px;
        margin-left: 10px;
      }

      h3 {
        text-align: center;
        margin-bottom: 30px;
      }
    </style>
  </head>

  <body>
    <h3>
      Стерлитамак-ДПС
    </h3>

    {{#each posts}}
      <div class="post">
        <div class="main-post">
          <b>{{this.time}}:</b> {{ this.text }}
        </div>

        {{#each this.replies}}
          <div class="reply-post">
            - {{ this.text }}
          </div>
        {{/each}}
      </div>
    {{/each}}
  </body>
</html>
